<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.flights.SearchFlightsResultActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/flightsMainColor">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/search_flights_result_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="?attr/homeAsUpIndicator"
            android:foregroundTint="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:contentInsetStartWithNavigation="0dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingStart="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="8dp"
                    android:paddingHorizontal="10dp"
                    android:layout_weight="1"
                    android:onClick="searchOnClick">
                    <TextView
                        android:id="@+id/search_flights_result_tv_from_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ICN - CJU"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/search_flights_result_tv_from_to"
                        android:text="2월 12일"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray"
                        android:textStyle="bold"/>
                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_searching"
                        android:tint="@android:color/white"
                        android:scaleType="centerCrop"/>
                </RelativeLayout>
                <ImageButton
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_alarm"
                    android:tint="@android:color/white"
                    android:scaleType="centerCrop"
                    android:background="@android:color/transparent"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/search_flights_result_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="100개의 결과"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@android:color/transparent"
                android:text="@string/search_flights_sort_filter"
                android:textColor="@color/flightsAccentColor"
                android:textStyle="bold"/>
        </RelativeLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/searchFlightsResultBackground">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/search_flights_result_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="5dp"/>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>