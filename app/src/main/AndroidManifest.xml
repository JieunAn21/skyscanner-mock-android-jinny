<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jeahn.skyscanner">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_skyscanner"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_skyscanner_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        android:name=".src.ApplicationClass">
        <activity android:name=".src.splash.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".src.main.MainActivity"/>
        <activity android:name=".src.flights.SearchFlightsResultActivity"/>
        <activity android:name=".src.flights.SearchFlightsActivity"
            android:theme="@style/Theme.Transparent"/>
        <activity android:name=".src.flights.FlightDetailActivity"/>
    </application>

</manifest>